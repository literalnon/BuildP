<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.bloold.buildp.search.SearchActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white">

        <Spinner
            android:id="@+id/spinnerChoice"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize" />

        <EditText
            android:id="@+id/etChoice"
            android:drawableStart="@drawable/ic_arrow_next"
            android:layout_width="match_parent"
            android:textColor="@color/red"
            android:layout_height="?attr/actionBarSize"
            android:drawableEnd="@drawable/ic_alert_circle"
            android:drawablePadding="8dp"
            android:background="@android:color/transparent"/>

    </android.support.design.widget.AppBarLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:id="@+id/lvNames"/>

</LinearLayout>
